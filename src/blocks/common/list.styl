.list
  list-style: none
  padding: 0

.list_header
  display: flex
  flex-flow: row nowrap
  left: 9999px
  overflow: hidden
  position: absolute
  top: 0
  transition: all 0.25s ease-out
  *zoom: 1

.list_header:hover
  position: static
  z-index: 1

.list_header:before
  content: " "
  background: transparent
  display: block
  height: 20px
  position: absolute
  left: 0
  top: 0
  width: 100%

.list_music
  margin: 0 0 20px 0

.list__item
  color: grey_one
  font: 400 14px font_firasans

@media (min-width: tablet)
  .list_music
    margin: 0 0 40px 0
